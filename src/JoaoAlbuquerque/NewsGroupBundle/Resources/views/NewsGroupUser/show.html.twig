{% extends '::base.html.twig' %}

{% block body -%}
    <h1>NewsGroupUser</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ entity.email }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ entity.createdat|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('newsgroupuser_new') }}">
            Add a friend
        </a>
    </li>
    <li>
        <a href="{{ path('newsgroupuser_delete', { 'id': entity.id }) }}">
            Unsubscribe
        </a>
    </li>
</ul>
{% endblock %}
